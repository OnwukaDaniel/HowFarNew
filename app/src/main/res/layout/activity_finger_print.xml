<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".howfarwallet.ActivityFingerPrint">

    <LinearLayout
        android:id="@+id/password_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/password_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="Enter Password" />

        <ImageView
            android:id="@+id/password_image"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="38sp"
            android:src="@drawable/empty_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:id="@+id/number1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="1"
                    android:textSize="30sp"
                    android:weightSum="3" />

                <TextView
                    android:id="@+id/number2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="2"
                    android:textSize="30sp"
                    android:weightSum="3" />

                <TextView
                    android:id="@+id/number3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="3"
                    android:textSize="30sp"
                    android:weightSum="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:id="@+id/number4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="4"
                    android:textSize="30sp"
                    android:weightSum="3" />

                <TextView
                    android:id="@+id/number5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="5"
                    android:textSize="30sp"
                    android:weightSum="3" />

                <TextView
                    android:id="@+id/number6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="6"
                    android:textSize="30sp"
                    android:weightSum="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:id="@+id/number7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="7"
                    android:textSize="30sp"
                    android:weightSum="3" />

                <TextView
                    android:id="@+id/number8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="8"
                    android:textSize="30sp"
                    android:weightSum="3" />

                <TextView
                    android:id="@+id/number9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="9"
                    android:textSize="30sp"
                    android:weightSum="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/number_dot"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:src="@drawable/fingerprint"
                    app:tint="#757575"
                    android:weightSum="3" />

                <TextView
                    android:id="@+id/number0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="0"
                    android:textSize="30sp"
                    android:weightSum="3" />

                <ImageView
                    android:id="@+id/clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foreground="@drawable/gray_ripple"
                    android:gravity="center"
                    android:padding="18sp"
                    android:src="@drawable/keyboard_back"
                    android:textSize="30sp"
                    android:weightSum="3" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="Please wait..." />

        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="38sp"
            android:src="@drawable/empty_password" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>