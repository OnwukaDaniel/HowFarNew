<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/verify_type_root"
    android:background="?android:windowBackground"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context=".sign_up.ActivityVerificationType">

    <androidx.cardview.widget.CardView
        android:id="@+id/verify_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="12dp"
            app:tint="?android:textColorPrimary"
            android:src="@drawable/cancel" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:text="Verification"/>

        <View
            android:layout_width="0dp"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select a method of verification"/>

        <View
            android:layout_width="0dp"
            android:layout_height="26dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:foreground="@drawable/gray_ripple"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Message OTP"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingVertical="6dp"
                android:text="OTP (One time password) will be sent to your phone number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:foreground="@drawable/gray_ripple"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Flash call"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingVertical="6dp"
                android:text="Make sure the number used for registering is in this device"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:foreground="@drawable/gray_ripple"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Call"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingVertical="6dp"
                android:text="You will receive a phone call with your OTP"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/message_verify"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="18dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="14dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:foreground="@drawable/gray_ripple"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Message OTP"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/flash_verify"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="18dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="14dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:foreground="@drawable/gray_ripple"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Flash Call"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                android:id="@+id/call_verify"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="18dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="14dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:foreground="@drawable/gray_ripple"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Call"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="32dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>