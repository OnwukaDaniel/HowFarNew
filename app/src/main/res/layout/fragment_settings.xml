<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:windowBackground"
    tools:context=".howfarchat.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/settings_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:foreground="@drawable/circular_ripple"
                android:padding="8dp"
                app:tint="?android:textColorPrimary"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Settings"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp" />


        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            app:cardElevation="0dp"
            android:elevation="0dp"
            style="@style/Theme.HowFar.LightCard"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/settings_user_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="8dp"
                    app:shapeAppearance="@style/CircleImage"
                    android:src="@drawable/ic_avatar" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/settings_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center_vertical"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="My account" />

                    <TextView
                        android:id="@+id/settings_user_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLines="3"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center_vertical"
                        android:text="Bio" />

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp" />

                <ImageView
                    android:id="@+id/settings_user_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    app:tint="?android:textColorPrimary"
                    android:foreground="@drawable/circular_ripple"
                    android:src="@drawable/ic_baseline_edit_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/settings_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    android:src="@drawable/account_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="My account" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="10dp"
                                    android:rotation="180"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/settings_chat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    android:src="@drawable/chat_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="Chat" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="10dp"
                                    android:rotation="180"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/settings_notification_toggle_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    android:src="@drawable/notification_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="Notification" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/settings_notification_toggle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/settings_theme_toggle_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    android:src="@drawable/theme_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="Theme " />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="(Light)" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/settings_theme_toggle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/settings_accent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    app:tint="@color/green"
                                    android:src="@drawable/theme_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="Accent color " />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="10dp"
                                    android:rotation="180"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/privacy_policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    android:src="@drawable/security_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="Security &amp; Privacy" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="10dp"
                                    android:rotation="180"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/settings_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    android:src="@drawable/payment_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="Payment" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="10dp"
                                    android:rotation="180"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/help"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    android:src="@drawable/help_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="Help" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="10dp"
                                    android:rotation="180"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/settings_log_out"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="8dp"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            style="@style/Theme.HowFar.LightCard"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="8dp"
                                    android:src="@drawable/logout_design" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center_vertical"
                                    android:text="Logout" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="45dp" />

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="10dp"
                                    android:rotation="180"
                                    app:tint="?android:textColorPrimary"
                                    android:src="@drawable/ic_arrow" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>